<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#161734"
    android:orientation="vertical"
    android:paddingTop="20dp"
    tools:context=".Activities.CardInfoActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="right|top"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_more_horiz_black_24dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher_round" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_gravity="top|center|left"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="8dp"
            android:text="Mohamed ELHDAD"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center|left"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:text="2 May , 5:30Am"
            android:textColor="#CDFFFFFF"
            android:textSize="10sp"

            />
    </FrameLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:drawableRight="@drawable/ic_brightness_1_black_24dp"
            android:drawablePadding="10dp"
            android:text="hesham mohamed"
            android:textColor="#CBFFFFFF"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:drawablePadding="10dp"
            android:text="City : Mansoura"
            android:textColor="#CBFFFFFF"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:drawablePadding="10dp"
            android:text="Age : 11"
            android:textColor="#CBFFFFFF"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:drawablePadding="10dp"
            android:text="Number : 010100000002"
            android:textColor="#CBFFFFFF"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:drawablePadding="10dp"
            android:text="this chaild hasbeen missing for two weeks and we ask anyone how know or found him to inform me"
            android:textColor="#BCFFFFFF"
            android:textSize="22sp" />


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="10dp">

        <Button
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_marginLeft="50dp"
            android:background="@drawable/background_btn1" />

        <Button
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_marginRight="50dp"
            android:background="@drawable/background_btn1" />
    </FrameLayout>

</LinearLayout>