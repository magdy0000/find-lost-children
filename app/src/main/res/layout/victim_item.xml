<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp"
    android:background="#161734"
    app:layout_goneMarginBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#161734"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/source_image_victim_item"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/user" />

            <TextView
                android:id="@+id/source_name_victim_item"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="top|center|left"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/post_time_victim_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center|left"
                android:layout_marginLeft="90dp"
                android:layout_marginBottom="10dp"
                android:textColor="#CDFFFFFF"
                android:textSize="10sp"

                />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/victim_image_victim_item"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop" />


            <TextView
                android:id="@+id/victim_name_victim_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="10dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/victim_description_victim_item"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">

            <Button
                android:id="@+id/details_btn_victim_item"
                android:layout_width="97dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginLeft="200dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/background_btn1"
                android:text="Details"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="20sp" />

        </FrameLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>